{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "params": [],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "cadetblue"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/hkam0006/assignment_2/main/data/co2_emission_per_capita.csv"
            },
            "key": "Entity",
            "fields": [
              "Entity",
              "Annual CO2 emissions (per capita)",
              "Year"
            ]
          },
          "as": [
            "entity",
            "co2_emission",
            "year"
          ]
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "co2_emission",
          "title": "CO2 Emissions per Capita (t)",
          "type": "quantitative",
          "legend": {
            "orient": "bottom",
            "direction": "horizontal"
          },
          "scale": {
            "type": "threshold",
            "domain": [
              5,
              10,
              15,
              20,
              25,
              30,
              35
            ],
            "range": [
              "#ffbaba",
              "#ff7b7b",
              "#ff5252",
              "#cc0000",
              "#a70000",
              "#660000",
              "#4c0000",
              "#190000"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "co2_emission",
            "type": "quantitative",
            "title": "CO2 Emissions per Capita in tons (t)",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
            },
            "key": "name",
            "fields": [
              "latitude",
              "longitude"
            ]
          }
        },
        {
          "filter": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Brazil' || datum['properties.NAME'] == 'Australia' ||  datum['properties.NAME'] == 'Canada' ||  datum['properties.NAME'] == 'Russia' || datum['properties.NAME'] == 'India'"
        }
      ],
      "mark": {
        "type": "text"
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "text": {
          "field": "properties.NAME",
          "type": "nominal"
        },
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Brazil' || datum['properties.NAME'] == 'Australia' ||  datum['properties.NAME'] == 'Canada' ||  datum['properties.NAME'] == 'Russia' || datum['properties.NAME'] == 'India'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "legend": {
      "orient": "bottom",
      "layout": {
        "bottom": {
          "anchor": "middle"
        }
      }
    }
  }
}