{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/hkam0006/assignment_2/main/data/death_rate_10000_edited.csv"
  },
  "params": [
    {
      "name": "Year_filter",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "top_k_countries",
      "value": 5,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 50,
        "step": 1,
        "name": "No. Countries"
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == Year_filter"
    },
    {
      "filter": "datum.Continent == Continent_selection || Continent_selection == null"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "Deaths - Cause: All causes - Risk: Air pollution - Sex: Both - Age: Age-standardized (Rate)",
          "as": "sum_deaths"
        }
      ],
      "groupby": [
        "Entity",
        "Continent",
        "Code"
      ]
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [
        {
          "field": "sum_deaths",
          "order": "descending"
        }
      ]
    },
    {
      "filter": "datum.rank <= top_k_countries"
    }
  ],
  "mark": {
    "type": "bar",
    "cornerRadiusEnd": 15
  },
  "encoding": {
    "x": {
      "field": "sum_deaths",
      "type": "quantitative",
      "title": "Deaths per 10,000",
      "scale": {
        "domain": [
          0,
          550
        ]
      }
    },
    "y": {
      "field": "Code",
      "type": "nominal",
      "sort": "-x",
      "title": "Countries"
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Entity",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Continent",
        "type": "nominal",
        "title": "Continent"
      },
      {
        "field": "sum_deaths",
        "type": "quantitative",
        "title": "Deaths per 10,000"
      }
    ]
  }
}